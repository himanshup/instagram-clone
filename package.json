{
  "name": "instagram-clone",
  "version": "0.1.0",
  "main": "app.js",
  "private": true,
  "scripts": {
    "test": "mocha --exit",
    "client": "cd client && npm start",
    "server": "nodemon app.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node app.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "cloudinary": "^1.11.0",
    "connect-mongo": "^2.0.1",
    "connect-multiparty": "^2.2.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "fs": "0.0.1-security",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.2.15",
    "morgan": "^1.9.1",
    "multer": "^1.3.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "mocha": "^5.2.0"
  }
}
